{
    "name": "nzsakib/db-config",
    "description": "Package for storing config details in database",
    "keywords": [
        "nzsakib",
        "db-config"
    ],
    "homepage": "https://github.com/nzsakib/db-config",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Nazmus Sakib",
            "email": "sukku.mia@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.1",
        "illuminate/support": "5.6.*"
    },
    "require-dev": {
        "orchestra/testbench": "3.6.*",
        "phpunit/phpunit": "^7.0",
        "predis/predis": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "Nzsakib\\DbConfig\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nzsakib\\DbConfig\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Nzsakib\\DbConfig\\DbConfigServiceProvider"
            ],
            "aliases": {
                "DbConfig": "Nzsakib\\DbConfig\\DbConfigFacade"
            }
        }
    }
}
